<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout style="@style/layout_input_amount_style" >

        <com.example.interestingkeyboard.LongClickButton
            android:id="@+id/btn_1"
            style="@style/btn_input_amount_style"
            android:text="1" />

        <com.example.interestingkeyboard.LongClickButton
            android:id="@+id/btn_2"
            style="@style/btn_input_amount_style"
            android:text="2" />

        <com.example.interestingkeyboard.LongClickButton
            android:id="@+id/btn_3"
            style="@style/btn_input_amount_style"
            android:text="3" />
    </LinearLayout>

    <LinearLayout style="@style/layout_input_amount_style" >

        <com.example.interestingkeyboard.LongClickButton
            android:id="@+id/btn_4"
            style="@style/btn_input_amount_style"
            android:text="4" />

        <com.example.interestingkeyboard.LongClickButton
            android:id="@+id/btn_5"
            style="@style/btn_input_amount_style"
            android:text="5" />

        <com.example.interestingkeyboard.LongClickButton
            android:id="@+id/btn_6"
            style="@style/btn_input_amount_style"
            android:text="6" />
    </LinearLayout>

    <LinearLayout style="@style/layout_input_amount_style" >

        <com.example.interestingkeyboard.LongClickButton
            android:id="@+id/btn_7"
            style="@style/btn_input_amount_style"
            android:text="7" />

        <com.example.interestingkeyboard.LongClickButton
            android:id="@+id/btn_8"
            style="@style/btn_input_amount_style"
            android:text="8" />

        <com.example.interestingkeyboard.LongClickButton
            android:id="@+id/btn_9"
            style="@style/btn_input_amount_style"
            android:text="9" />
    </LinearLayout>

    <LinearLayout style="@style/layout_input_amount_style" >

        <com.example.interestingkeyboard.LongClickButton
            android:id="@+id/btn_point"
            style="@style/btn_input_amount_style"
            android:text="." />

        <com.example.interestingkeyboard.LongClickButton
            android:id="@+id/btn_0"
            style="@style/btn_input_amount_style"
            android:text="0" />

        <com.example.interestingkeyboard.LongClickButton
            android:id="@+id/btn_delect"
            style="@style/btn_input_amount_style"
            android:text="←" />
    </LinearLayout>

    <LinearLayout style="@style/layout_input_amount_style" >

        <Button
            android:id="@+id/btn_confirm"
            style="@style/btn_input_amount_style"
            android:background="#ed3f41"
            android:text="Confirm"
            android:textColor="@android:color/white" />
    </LinearLayout>

</LinearLayout>